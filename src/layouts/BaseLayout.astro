---
import { Nav } from "../components/Nav";
import Footer from "../components/Footer.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <script
      src="https://kit.fontawesome.com/0c1fb969e1.js"
      crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://use.typekit.net/uqc5wyf.css" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="og:image" content="../assets/og-image.png" />
    <meta name="og:title" content="24th Arctic Orthopedic Summit" />
    <meta
      name="og:description"
      content="Homepage of the 24th Arctic Orthopedic Summit"
    />
    <title>AOS 2025 - {title}</title>
  </head>
  <body>
    <Nav client:load />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  html {
    @apply prose-headings:font-bold font-[joly-display];
  }

  button {
    @apply bg-sky-300 p-4 hover:scale-105 active:scale-100 duration-200 ease-in-out font-medium;
  }
</style>
